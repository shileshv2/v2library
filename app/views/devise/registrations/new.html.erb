<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  	<%= f.label :email %><br />
  	<%= f.email_field :email, :autofocus => true,:placeholder => "type email" %>
  </div>

  <div>
  	<%= f.label :password %><br />
  	<%= f.password_field :password , :placeholder => "type password"%>
  </div>

  <div>
  	<%= f.label :password_confirmation %><br />
  	<%= f.password_field :password_confirmation, :placeholder => "type password confirmation" %>
  </div>

  <div>
  	<%= f.label :employee_id %><br />
  	<%= f.text_field :employee , :placeholder => "type employee id"%>
  </div>

  <div>
  	<%= f.label :location_id %><br />
  	<%= f.collection_select :location_id, Location.all, :id, :name , {:prompt => "select location"}%>
   </div>



  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
