<%- model_class = Transaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:book_id) %>:</strong></dt>
  <dd><%= @transaction.book_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employee) %>:</strong></dt>
  <dd><%= @transaction.employee %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employee_email) %>:</strong></dt>
  <dd><%= @transaction.employee_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @transaction.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:transaction_type) %>:</strong></dt>
  <dd><%= @transaction.transaction_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:transaction_date) %>:</strong></dt>
  <dd><%= @transaction.transaction_date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              transactions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_transaction_path(@transaction), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              transaction_path(@transaction),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
